@model IEnumerable<MES.WEB.Models.DetailVm>


<div class="box external-event">
    <div class="box-header with-border">
        <h3 class="box-title">Сколько теплообменников 5200-01 можно собрать</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="box-body">
        <div class="chart">
            <div id="container" width="742" height="286">
                <canvas id="Chart520001"></canvas>
            </div>

        </div>
    </div>
</div>





    <script>
        var ctx = document.getElementById("Chart520001").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Encode(Model.Select(x=>x.Name.Substring(0,2)))),
                datasets: [{
                    label: '5200-01',
                    data: @Html.Raw(Json.Encode(Model.Select(x=>x.Quantityq))),
                    backgroundColor:
                        'rgba(255, 159, 64, 1)'
                    ,
                    borderColor:
                        'rgba(255, 159, 64, 1)'
                    ,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                           
                        }
                    }]
                }
                
            }
        });
    </script>
  

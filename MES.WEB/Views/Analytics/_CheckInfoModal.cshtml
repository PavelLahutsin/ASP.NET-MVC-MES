@model MES.WEB.Models.ChekDetailsVm
<div id="modalContent" class="modal-content" style="width: 98vw; height: 100%">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Результаты проверки 5200-01</h4>
    </div>
    <div class="modal-body">
        <div class="chart">
            <canvas id="chekChart2" style="height: 229px; width: 594px;" width="742" height="286"></canvas>
        </div>
    </div>
</div>


<script>
    new Chart(document.getElementById("chekChart2"), {
        type: 'pie',
        data: {
            labels: ["Целые", "Крышка М", "Крышка №", "Трубка", "Корпус", "Брак", "Прочее", "Центр"],
            datasets: [{
                label: "Population (millions)",
                backgroundColor: ["#00a65a", "#f39c12", "#00c0ef'", "#3c8dbc", "#d2d6de", "#f56954","#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
                data: [@Html.Raw(Json.Encode(Model.Airtight)),@Html.Raw(Json.Encode(Model.CapM)),
                    @Html.Raw(Json.Encode(Model.CapN)),@Html.Raw(Json.Encode(Model.Tube)),
                    @Html.Raw(Json.Encode(Model.Housing)),
                    @Html.Raw(Json.Encode(Model.Defect)),@Html.Raw(Json.Encode(Model.Other)),
                    @Html.Raw(Json.Encode(Model.Center))]
            }]
        }
    });
</script>
@model IEnumerable<MES.WEB.Models.SolderingCountVm>
<div id="modalContent" class="modal-content" style="width: 98vw; height: 100%">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Сколько спаяно</h4>
    </div>
    <div class="modal-body">
        <div class="chart">
            <canvas id="solderingsChart2"  style="height: 229px; width: 594px;" width="742" height="286"></canvas>
        </div>
    </div>
</div>





<script>
    new Chart(document.getElementById("solderingsChart2"), {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Encode(Model.Select(x=>x.ProductName))),
            datasets: [{
                label: "Population (millions)",
                backgroundColor: ["#f56954", "#00a65a", "#f39c12", "#00c0ef'", "#3c8dbc", "#d2d6de"],
                data:  @Html.Raw(Json.Encode(Model.Select(x => x.Quantity)))
            }]
        }
    });
</script>


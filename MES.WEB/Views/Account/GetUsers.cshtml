@model IEnumerable<MES.WEB.Models.ChatUser>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Пользователи</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th style="width: 40px"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        
                        @if (item.UserName != "Серега")
                        {
                            <a class="btn btn-danger" onclick="deleteElement(event, this)" href="@Url.Action("Delete", new {id = item.Id})">Удалить</a>
                        }
                        else
                        {
                            <button class="btn btn-success">Дать премию</button>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


<script>
    $(function () {
        $.ajaxSetup({ cache: false });
        $(".btn-warning").click(function (e) {

            e.preventDefault();
            $.get(this.href,
                function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
        });
    })
</script>
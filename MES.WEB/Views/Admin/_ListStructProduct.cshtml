@model IEnumerable<MES.WEB.Models.DetailInProductVm>




<p>
    <a href="@Url.Action("AddStructProduct", new {id = Model.First().ProductId})" onclick="addElement(event, this)" class="btn btn-success">Добавить в состав продукта</a>
</p>
<div class="box box-group">
  
    <div class="box-header with-border">
        <h3 class="box-title">Состав продукта</h3>
    </div>
    <div class="box-body " style="">
        @if (Model.First().Id == -1)
        {
        <p>Добавьте детали в состав</p>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    
                    <th></th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        
                        <td>
                            <a class="text-danger" onclick="deleteElement(event, this)" href="@Url.Action("DeleteFromProduct", new { detailid = item.Id, productId = item.ProductId } )">Удалить</a>

                        </td>

                    </tr>
                }

            </table>
        }
            </div>
    <!-- /.box-body -->
</div>    
      
        
<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" id="chat">
        <i class="fa fa-comment"></i>
        
    </a>
    <div class="box box-primary direct-chat direct-chat-primary dropdown-menu">
        <div class="box-header with-border">
            <h3 class="box-title">Общий чат</h3>
           
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages" id="mesegebox">
             
            </div>
            <!--/.direct-chat-messages-->
    
            <!-- /.direct-chat-pane -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            @using (Ajax.BeginForm("Messege", "Chat", null, new AjaxOptions { UpdateTargetId = "mesegebox", OnSuccess = "OnSuccess" }, new { @id = "frmID" }))
            {
                <div class="input-group">
                    <input type="text" name="message" placeholder="Пиши здесь ..." class="form-control" id="inputText">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary btn-flat"><i class="fa fa-send"></i></button>
                    </span>
                </div>
            }
        </div>
        <!-- /.box-footer-->
    </div>
</li>

 

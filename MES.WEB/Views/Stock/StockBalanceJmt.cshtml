@model IEnumerable<MES.WEB.Models.DetailVm>

@{
    ViewBag.Title = "Остаток на складе";
}


<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<div class="box external-event">
    <div class="box-header with-border">
        <h3 class="box-title">5200-01</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="box-body">
        <div class="chart">
            <div id="container" style="width: 100%;">
                <canvas id="Chart520001"></canvas>
            </div>

        </div>
    </div>
</div>


<div class="box">
    <div class="box-header">
        <h3 class="box-title">ЖМТ</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VendorCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantityq)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantityq)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditJmtDetail", new { id=item.Id}, new { @class = "btn btn-danger" })                        
                    </td>
                </tr>
            }

        </table>
    </div>
</div>




@section scripts
{
    <script src="~/Scripts/Chart.min.js"></script>

    <script type="text/javascript">

            $(function () {
                $.ajaxSetup({ cache: false });
                $(".btn").click(function (e) {

                    e.preventDefault();
                    $.get(this.href, function (data) {
                        $('#dialogContent').html(data);
                        $('#modDialog').modal('show');
                    });
                });
            })
        </script>    


    <script>
        var ctx = document.getElementById("Chart520001").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Encode(ViewBag.d52001)),
                datasets: [{
                    label: '5200-01',
                    data: @Html.Raw(Json.Encode(ViewBag.d52001Count)),
                    backgroundColor:
                        'rgba(255, 159, 64, 1)'
                    ,
                    borderColor:
                        'rgba(255, 159, 64, 1)'
                    ,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
    </script>

    <script>
                var cto = document.getElementById("stock").className = "active treeview menu-open";
                var cto = document.getElementById("stockJmt").className = "active treeview menu-open";
                var met = document.getElementById("stockBalanceJmt").className = "active";
    </script>

}


